{
  "compilerOptions": {
    /* Build Options */
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "removeComments": true,

    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
